<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/favoriteTeams"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <Button
	        android:id="@+id/favTeamsHome"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:onClick="displayConfederations"
	        android:background="@drawable/fav_teams"
	        android:visibility="gone"/>
    
	    <LinearLayout android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
		    <Button
		        android:id="@+id/confederation"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:onClick="displayFederations"
		        android:background="@android:color/transparent"
		        android:visibility="gone"/>
		    <Button
		        android:id="@+id/federation"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:background="@android:color/transparent"
		        android:visibility="gone"/>
	    </LinearLayout>
    </LinearLayout>
    
    <ListView
        android:id="@+id/teamList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
    
    <RelativeLayout
	    android:id="@+id/loadingPanel"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="center"
	    android:visibility="visible" >
	
	    <ProgressBar
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:indeterminate="true" />
	</RelativeLayout>

</LinearLayout>
